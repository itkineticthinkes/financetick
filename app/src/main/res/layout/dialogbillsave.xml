<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/one_year_imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toStartOf="@+id/one_year_textView"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/checkbox_off_background" />

    <TextView
        android:id="@+id/one_year_textView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Generate for next 1 year"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center|left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/one_year_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/three_year_imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toStartOf="@+id/one_year_textView"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/one_year_textView"
        app:srcCompat="@drawable/checkbox_off_background" />

    <TextView
        android:id="@+id/three_year_textView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Generate for next 3 years"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center|left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/one_year_textView"
        app:layout_constraintStart_toEndOf="@+id/one_year_imageView"
         />


    <ImageView
        android:id="@+id/ten_year_imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/three_year_textView"
        app:srcCompat="@drawable/checkbox_off_background" />

    <TextView
        android:id="@+id/ten_year_textView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Generate for next 10 years"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center|left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/three_year_textView"
        app:layout_constraintStart_toEndOf="@+id/ten_year_imageView"
        />

    <ImageView
        android:id="@+id/end_date_calendar_imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ten_year_textView"
        app:srcCompat="@drawable/checkbox_off_background" />

    <TextView
        android:id="@+id/end_date_calendar_textView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Select end date calendar"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center|left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/ten_year_textView"
        app:layout_constraintStart_toEndOf="@+id/end_date_calendar_imageView"
        />


    <ImageView
        android:id="@+id/no_of_bills_imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/end_date_calendar_textView"
        app:srcCompat="@drawable/checkbox_off_background" />

    <TextView
        android:id="@+id/no_of_bills_textView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Create these number of bills"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center|left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/end_date_calendar_textView"
        app:layout_constraintStart_toEndOf="@+id/no_of_bills_imageView"
        />

    <TextView
        android:id="@+id/end_date_textView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginRight="20dp"
        android:text="End Date being Considered :- "
        android:gravity="center|left"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_of_bills_textView"
       />

    <TextView
        android:id="@+id/end_date_textView_value"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="-"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center|left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/no_of_bills_textView"
        app:layout_constraintStart_toEndOf="@+id/end_date_textView"
        />


    <TextView
        android:id="@+id/Create_no_of_bills_textView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginRight="20dp"
        android:text="Create these no of bills :- "
        android:gravity="center|left"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/end_date_textView_value"
        />

    <TextView
        android:id="@+id/Create_no_of_bills_textView_value"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="-"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center|left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/end_date_textView_value"
        app:layout_constraintStart_toEndOf="@+id/end_date_textView"
        />


</androidx.constraintlayout.widget.ConstraintLayout>